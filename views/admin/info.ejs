<!DOCTYPE html>
<html lang="en">

<head>
<meta name="author" content="MONARCH MAISURIYA">
<meta name="author" content="HIMANSHU JOSHI">
   <% include ./head %>
</head>
 
<body class="grey lighten-3">

  <!--Main Navigation-->
  <header>
 <% include ./header %>
  </header>
  <!--Main Navigation-->



  <!--Main layout-->
  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
        <div class="jumbotron">

        <% if (all) { %>
        <h3 class="text-center mb-4">All Participants</h3>
          <table id="dataTableAll" class="table table-striped container center-element ">
                <thead>
                    <tr>
                    <th>Email</th>
                    <th >Name</th>
                    <th>Phone</th>
                    <th>Event</th>
                    <th>Registered On</th>
                    </tr>
                </thead>
                <tbody>
                <% participants.forEach(function(item){ %>
                <% upcomingEvents.forEach(function(element){ %>
                <% if (item.eventID == element.id) { %>
                    <tr>
                    <td><%= item.email %></td>
                    <td><%= item.name %></td>
                    <td><%= item.phone %></td>
                    <td><%= element.title %></td>
                     <td><%= item.date %></td>
                    </tr>
                      <% } %>
                     <% }) %>
                    <% }) %>
                </tbody>
                </table>
           <% } %>

         <% if (!all) { %>
        
         <h3 class="text-center mb-4">Participants List : <%= event %></h3>
          <% if (err) { %>
            <div class="alert alert-danger col-md-4 center-element mt-5 mb-5  text-center" role="alert">
                    <h6>Sorry no participants for this event.</h6>
                  </div>
          <% } %>
           <% if (succ) { %>
                <table class="table table-striped container center-element ">
                <thead>
                    <tr>
                    <th>Email</th>
                    <th >Name</th>
                    <th>Phone</th>
                    <th>Registered On</th>
                    </tr>
                </thead>
                <tbody>
                <% participants.forEach(function(item){ %>
                    <tr>
                    <td><%= item.email %></td>
                    <td><%= item.name %></td>
                    <td><%= item.phone %></td>
                    <td><%= item.date %></td>
                    </tr>
                    <% }) %>
                </tbody>
                </table>
                <% } %> 
             <% } %>
        </div>
    </div>
  </main>

  <!--Main layout-->

  <!--Footer-->
  <footer class="text-center font-small ">
  <% include ./footer %>
  </footer>
  <!--/.Footer-->

  <!-- SCRIPTS -->

  <!-- JQuery -->
  <script type="text/javascript" src="../../admin/js/jquery-3.4.1.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="../../admin/js/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="../../admin/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="../../admin/js/mdb.min.js"></script>

    <!--  JavaScript -->
    <script type="text/javascript">
      let date = new Date();
      document.getElementById("copyrightDate").innerHTML = date.getFullYear();

          // Basic example
        $(document).ready(function () {
          $('#dataTableAll').DataTable({
            "paging": "simple_numbers" 
          });
          $('.dataTables_length').addClass('bs-select');
        });
    </script>
    <!-- JavaScript -->

</body>

</html>

