<head>
   <% include ./head %>
</head>
 
<body class="grey lighten-3">

  <!--Main Navigation-->
  <header>
 <% include ./header %>
  </header>
  <!--Main Navigation-->



  <!--Main layout-->
  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
        <div class="jumbotron">
         <h3 class="text-center mb-4">Participants List : <%= event %></h3>
          <% if (err) { %>
            <div class="alert alert-danger col-md-4 center-element mt-5 mb-5  text-center" role="alert">
                    <h6>Sorry no participants for this event.</h6>
                  </div>
          <% } %>
           <% if (succ) { %>
                <table class="table table-striped container center-element ">
                <thead>
                    <tr>
                    <th>Email</th>
                    <th >Name</th>
                    <th>Phone</th>
                    <th>Registered On</th>
                    </tr>
                </thead>
                <tbody>
                <% participants.forEach(function(item){ %>
                    <tr>
                    <td><%= item.email %></td>
                    <td><%= item.name %></td>
                    <td><%= item.phone %></td>
                    <td><%= item.date %></td>
                    </tr>
                    <% }) %>
                </tbody>
                </table>
                <% } %> 
        </div>
    </div>
  </main>

  <!--Main layout-->

  <!--Footer-->
  <footer class="text-center font-small ">
  <% include ./footer %>
  </footer>
  <!--/.Footer-->

  <!-- SCRIPTS -->

    <!--  JavaScript -->
    <script type="text/javascript">
      let date = new Date();
      document.getElementById("copyrightDate").innerHTML = date.getFullYear();
    </script>
    <!-- JavaScript -->

  <!-- JQuery -->
  <script type="text/javascript" src="../../admin/js/jquery-3.4.1.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="../../admin/js/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="../../admin/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="../../admin/js/mdb.min.js"></script>

</body>

</html>

