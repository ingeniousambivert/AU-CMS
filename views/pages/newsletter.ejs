<!-- views/pages/newsletter.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>

  <body>
    <!-- Start your project here-->
    <!--Main Navigation-->
    <header>
      <% include ../partials/header %>
    </header>
    <!--Main Navigation-->
    <main class="container mt-10">
      <div class="card">
        <h5 class="card-header unique-color-dark white-text text-center py-4">
          <strong>Subscribe to our newsletter</strong>
        </h5>

        <!--Card content-->
        <div class="card-body px-lg-5">
          <!-- Form -->
          <form class="md-form  px-lg-5">
            <div class="text-center">
              <p>
                Join our mailing list. We write rarely, but only the best
                content.
              </p>

              <div class="row">
                <div class="col-sm-12">
                  <div class="md-form mb-0">
                    <input
                      type="text"
                      id="name"
                      name="user_name"
                      class="form-control"
                    />
                    <label for="email" class="">Your Name</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-12">
                  <div class="md-form mb-0">
                    <input
                      type="text"
                      id="email"
                      name="user_email"
                      class="form-control"
                    />
                    <label for="email" class="">Your Email</label>
                  </div>
                </div>
              </div>

              <button
                style="width:50%; margin:0 auto;"
                class=" btn white-text unique-color-dark btn-rounded btn-block z-depth-0 my-4 waves-effect"
                type="submit"
              >
                Subscribe
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="page-footer font-small unique-color-dark">
      <% include ../partials/footer %>
    </footer>
    <!-- Footer -->
    <!-- End your project here-->

    <!-- SCRIPTS -->
    <!-- Gogogle Maps JavaScript -->
    <script type="text/javascript">
      let date = new Date();
      document.getElementById("copyrightDate").innerHTML = date.getFullYear();
    </script>
    <!-- Gogogle Maps JavaScript -->
    <script type="text/javascript" src="../js/script.js"></script>
    <!-- JQuery -->
    <script type="text/javascript" src="../js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="../js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="../js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="../js/mdb.min.js"></script>
  </body>
</html>
