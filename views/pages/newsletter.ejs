<!-- views/pages/newsletter.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>

  <body>
    <!-- Start your project here-->
    <!--Main Navigation-->
    <header>
      <% include ../partials/header %>
    </header>
    <!--Main Navigation-->
    <!--Section: Contact v.2-->
    <section class="mb-4">
      <div class=" mt-5">
        <!--Card content-->
        <div class=" px-lg-5">
          <h4 class="text-center py-4">
            Register for the event
          </h4>
          <p class="text-center">
            <a href="/former" target="_blank">See the last event</a>
          </p>
          <!-- Form -->
          <form class="md-form px-lg-5" id="register-event">
            <div class="row">
              <div class="col-sm-6">
                <div class="md-form mb-0">
                  <input
                    type="text"
                    id="email"
                    name="user_email"
                    class="form-control"
                  />
                  <label for="email" class="">Your email</label>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="md-form mb-0">
                  <input
                    type="text"
                    id="name"
                    name="user_name"
                    class="form-control"
                  />
                  <label for="email" class="">Your Name</label>
                </div>
              </div>
            </div>
            <button
              style="width:50%; margin:0 auto;"
              class=" btn white-text primary-color btn-rounded btn-block z-depth-0 my-4 waves-effect"
              type="submit"
            >
              Sign Up
            </button>
          </form>
        </div>
      </div>

      <!--Grid column-->
    </section>
    <!--Section: Contact v.2-->

    <!-- Footer -->
    <footer class="page-footer font-small unique-color-dark">
      <% include ../partials/footer %>
    </footer>
    <!-- Footer -->
    <!-- End your project here-->

    <!-- SCRIPTS -->
    <!-- Gogogle Maps JavaScript -->
    <script type="text/javascript">
      let date = new Date();
      document.getElementById("copyrightDate").innerHTML = date.getFullYear();
    </script>
    <!-- Gogogle Maps JavaScript -->
    <script type="text/javascript" src="../js/script.js"></script>
    <!-- JQuery -->
    <script type="text/javascript" src="../js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="../js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="../js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="../js/mdb.min.js"></script>
  </body>
</html>
